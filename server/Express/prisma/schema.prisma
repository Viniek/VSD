generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
id String @id @default(uuid()) @unique
firstname String
lastname String
email String @unique
gender String
disability String
maritual_status String @default("single")
password String
phone String @unique
next_of_kin String?
next_of_kin_phone String?
history history?
}

model history{
  id String @id @default(uuid()) @unique
  user users @relation(fields: [userId], references: [id])
  userId  String @unique @default(uuid())
  testResult String?
  testDate   DateTime @default(now()) 
  factors    Json 
  
}

